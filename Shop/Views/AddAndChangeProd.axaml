<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="650"
        Width="1000" Height="650"
        x:Class="Shop.Views.AddAndChangeProd"
        Title="AddAndChangeProd">
    <Grid RowDefinitions="Auto, Auto,Auto,Auto,Auto,Auto,Auto">
                <TextBlock HorizontalAlignment="Center" FontSize="35"
                           FontWeight="Bold">Добавление/Редактирование продукта</TextBlock>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <StackPanel>
                <StackPanel Margin="10">
                    <Image Width="200" Height="200" Name="ProductImage"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Margin="10" Orientation="Horizontal">
                    <TextBlock FontSize="20">Название продукта: </TextBlock>
                    <TextBox Width="250" Name="NameProdText" Text="{Binding NameProduct}" />
                </StackPanel>
                <StackPanel Grid.Row="1" Margin="10" Orientation="Horizontal">
                    <TextBlock FontSize="20">Описание: </TextBlock>
                    <TextBox Width="250" Name="DescriptionText" Text="{Binding Description}" />
                </StackPanel>
                <StackPanel Grid.Row="1" Margin="10" Orientation="Horizontal">
                    <TextBlock FontSize="20">Цена: </TextBlock>
                    <TextBox Width="222" Name="PriceText" Text="{Binding Price}"/>
                </StackPanel>
                <StackPanel Grid.Row="2" Margin="10" Orientation="Horizontal">
                    <TextBlock Text="Категория:" FontSize="20" Grid.Row="5" HorizontalAlignment="Right"/>
                    <ComboBox Name="ComboCategory" SelectionChanged="ComboCategory_OnSelectionChanged" Grid.Row="6"  HorizontalAlignment="Right" Width="200"  >
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Name="NameCategoryText" FontWeight="Bold" Text="{Binding NameCategory}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
                <Button Content="Сохранить" FontSize="20" Margin="10" Click="SaveButton"/>
            </StackPanel>
        </StackPanel>
        </Grid>
</Window>
